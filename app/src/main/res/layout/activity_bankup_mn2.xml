<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_head_pic_right" />

    <TextView
        android:id="@+id/tv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34pt"
        android:layout_marginTop="30pt"
        android:text="Copy your wallet phrase"
        android:textColor="#ff91a2aa"
        android:textSize="22pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34pt"
        android:layout_marginTop="36pt"
        android:layout_marginRight="34pt"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The phrase is used to restore the wallet or "
            android:textColor="@color/text_gray02"
            android:textSize="22pt" />

        <TextView
            android:id="@+id/tv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reset the wallet"
            android:textColor="#388EDA"
            android:textSize="20pt" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30pt"
        android:layout_marginRight="34pt"
        android:gravity="left"
        android:text=" password,copy it to paper accurately,and store it in a safe place "
        android:textColor="@color/text_gray02"
        android:textSize="22pt" />

    <TextView
        android:id="@+id/tv_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30pt"
        android:layout_marginRight="34pt"
        android:gravity="left"
        android:text=" that only you know."
        android:textColor="@color/text_gray02"
        android:textSize="22pt" />

    <TextView
        android:id="@+id/tv_my_mnemonics"
        android:layout_width="match_parent"
        android:layout_height="130pt"
        android:layout_gravity="center"
        android:layout_marginLeft="34pt"
        android:layout_marginTop="80pt"
        android:layout_marginRight="34pt"
        android:background="@drawable/bg_gray_radius20"
        android:gravity="center_vertical|left"
        android:paddingLeft="18pt"
        android:paddingTop="32pt"
        android:paddingRight="18pt"
        android:paddingBottom="32pt"
        android:textColor="#42535B"
        android:textSize="18pt" />

    <TextView
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="86pt"
        android:layout_gravity="center"
        android:layout_marginLeft="34pt"
        android:layout_marginTop="94pt"
        android:layout_marginRight="34pt"
        android:background="@drawable/bg_btn"
        android:gravity="center"
        android:layerType="none"
        android:text="Next Step"
        android:textColor="@color/white"
        android:textSize="22pt" />
</LinearLayout>