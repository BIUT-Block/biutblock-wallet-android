<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_24px"
        android:layout_marginRight="@dimen/dimen_24px"
        android:layout_marginTop="@dimen/dimen_40px"
        android:text="直接复制粘贴以太坊钱包keystore文件内容至输入框。"
        android:textColor="#FFB0AFAF"
        android:textSize="32px" />

    <EditText
        android:id="@+id/ed_json"
        android:layout_width="match_parent"
        android:layout_height="320px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dimen_24px"
        android:layout_marginRight="@dimen/dimen_24px"
        android:layout_marginTop="@dimen/dimen_30px"
        android:background="@drawable/ed_bg_boder_blue"
        android:gravity="start"
        android:hint="keystore文本内容"
        android:padding="@dimen/dimen_24px"
        android:scrollbars="none"
        android:textColor="@color/text_black"
        android:textSize="32px" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_24px"
        android:layout_marginTop="@dimen/dimen_40px"
        android:text="Keystore密码"
        android:textColor="#FFB0AFAF"
        android:textSize="@dimen/dimen_30px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60px"
        android:layout_marginTop="@dimen/dimen_20px"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_24px"
        android:paddingRight="@dimen/dimen_24px">

        <EditText
            android:id="@+id/ed_pass"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/white"
            android:inputType="textPassword"
            android:textColorHint="#FFBBBABA"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_clear"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_24px"
        android:layout_marginRight="@dimen/dimen_24px"
        android:layout_marginTop="4px"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_60px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_30px"
            android:background="@drawable/cb_agreemnt"
            android:button="@null"
            android:checked="false" />

        <TextView
            style="@style/text_30_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20px"
            android:text="我已仔细阅读并同意 "
            android:textColor="#FFB2B2B2" />

        <TextView
            android:id="@+id/tv_agreement"
            style="@style/text_30_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务条款 "
            android:textColor="@color/text_yellow" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_start_import"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80px"
        android:layout_marginLeft="@dimen/dimen_24px"
        android:layout_marginRight="@dimen/dimen_24px"
        android:layout_marginTop="@dimen/dimen_40px"
        android:background="@color/line_color"
        android:gravity="center"
        android:text="开始导入"
        android:textColor="@color/text_noChose"
        android:textSize="@dimen/dimen_36px" />

    <TextView
        android:id="@+id/tv_what_keys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dimen_40px"
        android:layout_marginTop="@dimen/dimen_26px"
        android:gravity="center"
        android:padding="5px"
        android:text="什么是keystore"
        android:textColor="#AF8444"
        android:textSize="28px" />
</LinearLayout>