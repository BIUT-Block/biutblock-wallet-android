<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_head_pic_right" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_50px"
                android:layout_marginTop="240px"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_confirm_pass" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_50px"
                android:layout_marginTop="161px"
                android:text="Confirm the password"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/dimen_55px"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_50px"
                android:layout_marginTop="@dimen/dimen_130px"
                android:layout_marginRight="@dimen/dimen_50px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password "
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/dimen_32px"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#EE1C38"
                    android:textSize="@dimen/dimen_32px"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="122px"
                android:layout_marginLeft="@dimen/dimen_50px"
                android:layout_marginTop="@dimen/dimen_30px"
                android:layout_marginRight="@dimen/dimen_50px"
                android:background="@drawable/bg_edit_gray"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_gray"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/dimen_20px"
                    android:textSize="@dimen/dimen_28px" />

                <ImageView
                    android:id="@+id/iv_clear1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_marginRight="@dimen/px10"
                    android:background="@drawable/icon_clear"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_130px"
                android:layout_marginLeft="@dimen/dimen_50px"
                android:layout_marginTop="@dimen/px160"
                android:layout_marginRight="@dimen/dimen_50px"
                android:background="@drawable/bg_btn_cannot"
                android:gravity="center"
                android:text="Sure"
                android:textColor="@color/white"
                android:textSize="34px"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>