<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="120pt">

            <include layout="@layout/include_head_pic_right" />

            <ImageView
                android:layout_width="112pt"
                android:layout_height="124pt"
                android:layout_marginLeft="34pt"
                android:layout_marginTop="40px"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_confirm_pass" />

            <TextView
                android:id="@+id/tv_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34pt"
                android:layout_marginTop="108pt"
                android:text="Confirm The Password"
                android:textColor="@color/text_blue"
                android:textSize="36pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34pt"
                android:layout_marginTop="86pt"
                android:layout_marginRight="34pt"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password "
                    android:textColor="@color/text_black"
                    android:textSize="18pt"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#EE1C38"
                    android:textSize="18pt"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="82pt"
                android:layout_marginLeft="34pt"
                android:layout_marginTop="20pt"
                android:layout_marginRight="34pt"
                android:background="@drawable/bg_edit_gray"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="82pt"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edit_gray"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:paddingLeft="@dimen/dimen_20px"
                    android:textSize="@dimen/dimen_28px" />

                <LinearLayout
                    android:id="@+id/ll_clear1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="26pt"
                        android:layout_height="26pt"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16pt"
                        android:layout_marginRight="16pt"
                        android:background="@drawable/icon_clear" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="match_parent"
                android:layout_height="86pt"
                android:layout_marginLeft="34pt"
                android:layout_marginTop="108pt"
                android:layout_marginRight="34pt"
                android:background="@drawable/bg_btn_cannot"
                android:gravity="center"
                android:text="Sure"
                android:textColor="@color/white"
                android:textSize="22pt"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>