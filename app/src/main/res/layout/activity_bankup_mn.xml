<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dimen_48px"
            android:layout_marginTop="62px"
            android:src="@drawable/icon_jump" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10px"
            android:text="备份钱包"
            android:textColor="#FF4A4A4A"
            android:textSize="@dimen/dimen_40px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/px50"
            android:background="@drawable/icon_backup_wallet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/px40"
            android:text="最后一步：立即备份你的钱包！"
            android:textColor="#FF4A4A4A"
            android:textSize="@dimen/dimen_36px" />

        <TextView
            android:layout_width="640px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/px40"
            android:text="@string/zhujici_tishi"
            android:textColor="#FFB2B2B2"
            android:textSize="32px" />

        <Button
            android:id="@+id/btn_bankup"
            android:layout_width="640px"
            android:layout_height="100px"
            android:layout_gravity="center"
            android:layout_marginTop="200px"
            android:background="@drawable/btn_golden"
            android:text="备份钱包"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_30px" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>