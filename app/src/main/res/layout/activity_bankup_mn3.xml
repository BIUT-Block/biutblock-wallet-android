<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/include_head_pic_right"></include>

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34pt"
                android:layout_marginTop="30pt"
                android:layout_marginRight="34pt"
                android:text="Confirm your wallet phrase"
                android:textColor="@color/text_gray02"
                android:textSize="20pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34pt"
                android:layout_marginTop="36pt"
                android:layout_marginRight="34pt"
                android:lineSpacingMultiplier="1.1"
                android:text="@string/mne_tips"
                android:textColor="@color/text_gray02"
                android:textSize="20pt" />

            <LinearLayout
                android:id="@+id/ll_my_mns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="34pt"
                android:layout_marginTop="46pt"
                android:layout_marginRight="34pt"
                android:background="@drawable/bg_gray_radius20"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_24px"
                android:visibility="gone"></LinearLayout>

            <LinearLayout
                android:id="@+id/ll_old_mns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="34pt"
                android:layout_marginTop="46pt"
                android:layout_marginRight="34pt"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_24px"
                android:visibility="visible"></LinearLayout>

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="match_parent"
                android:layout_height="86pt"
                android:layout_marginLeft="34pt"
                android:layout_marginTop="120pt"
                android:layout_marginRight="34pt"
                android:layout_marginBottom="100pt"
                android:background="@drawable/bg_btn_cannot"
                android:enabled="false"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="22pt"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>