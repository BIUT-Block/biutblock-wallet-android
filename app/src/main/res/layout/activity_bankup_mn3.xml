<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/px50">

            <include layout="@layout/include_head_pic_right"></include>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_50px"
                android:layout_marginTop="200px"
                android:layout_marginRight="@dimen/dimen_50px"
                android:text="Confirm your wallet phrase"
                android:textColor="@color/text_gray02"
                android:textSize="@dimen/dimen_32px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_50px"
                android:layout_marginTop="@dimen/dimen_50px"
                android:layout_marginRight="@dimen/dimen_50px"
                android:lineSpacingMultiplier="1.1"
                android:text="@string/mne_tips"
                android:textColor="@color/text_gray02"
                android:textSize="@dimen/dimen_32px" />

            <LinearLayout
                android:id="@+id/ll_my_mns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dimen_50px"
                android:layout_marginTop="@dimen/dimen_70px"
                android:layout_marginRight="@dimen/dimen_50px"
                android:background="@drawable/bg_gray_radius20"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_24px"
                android:visibility="gone"></LinearLayout>

            <LinearLayout
                android:id="@+id/ll_old_mns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dimen_50px"
                android:layout_marginTop="@dimen/dimen_80px"
                android:layout_marginRight="@dimen/dimen_50px"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_24px"
                android:visibility="visible"></LinearLayout>

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_130px"
                android:layout_marginLeft="@dimen/dimen_50px"
                android:layout_marginTop="@dimen/dimen_100px"
                android:layout_marginRight="@dimen/dimen_50px"
                android:layout_marginBottom="@dimen/dimen_100px"
                android:background="@drawable/bg_btn_cannot"
                android:enabled="false"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="34px"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>