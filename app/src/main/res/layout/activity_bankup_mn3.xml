<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include layout="@layout/inclued_head_back" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="12.5pt"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/px50"
                    android:text="确认你的钱包助记词"
                    android:textColor="#FFCBC2AE"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dimen_30px"
                    android:text="请按照顺序点击助记词，以确认你的备份助记词正确。"
                    android:textColor="#FFB2B2B2"
                    android:textSize="32px" />

                <LinearLayout
                    android:id="@+id/ll_my_mns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bg_gray_radius12"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dimen_24px"
                    android:paddingLeft="@dimen/dimen_24px"
                    android:paddingRight="24px"
                    android:visibility="gone"></LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_old_mns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical"
                    android:padding="@dimen/px20"></LinearLayout>

                <Button
                    android:id="@+id/btn_sure"
                    android:layout_width="360px"
                    android:layout_height="@dimen/dimen_100px"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dimen_60px"
                    android:layout_marginTop="60px"
                    android:background="@drawable/btn_golden"
                    android:baselineAligned="false"
                    android:text="确认"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_30px" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>