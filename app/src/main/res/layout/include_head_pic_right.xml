<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_title"
    android:layout_width="match_parent"
    android:layout_height="220pt"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24pt">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxLength="12"
            android:text="标题"
            android:textColor="@color/text_black"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_back_top"
            style="@style/back_btn"
            android:layout_marginLeft="30pt"
            android:clickable="true"
            android:onClick="back"
            android:src="@drawable/back_selector"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_close_top"
            style="@style/back_btn_close"
            android:layout_marginLeft="30pt"
            android:clickable="true"
            android:onClick="back"
            android:src="@drawable/icon_close_black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_right"
            style="@style/rightButtonStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="30pt"
            android:text="" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30pt"
        android:layout_marginBottom="36pt"
        android:textColor="@color/text_color"
        android:textSize="36pt" />
</RelativeLayout>


