<?xml version="1.0" encoding="utf-8"?>
<com.hualianzb.sec.views.SwipeListLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:focusable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="132px"
            android:layout_height="match_parent"
            android:background="#FFF14C39"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="32px" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="152px"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px50">

        <ImageView
            android:id="@+id/avater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_avater" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_30px"
            android:layout_toRightOf="@id/avater"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_40px"
                    android:gravity="center_vertical"
                    android:text="姓名"
                    android:textColor="#FF4F4F4F"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_40px"
                    android:layout_marginLeft="@dimen/dimen_30px"
                    android:layout_toRightOf="@+id/tv_name"
                    android:gravity="center_vertical"
                    android:text="13359637383"
                    android:textColor="#FF4F4F4F"
                    android:textSize="28px" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_40px"
                android:layout_below="@+id/tv_name"
                android:layout_centerVertical="true"
                android:layout_marginTop="8px"
                android:text="0x123456...12345678"
                android:textColor="#FFB0AFAF"
                android:textSize="28px" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="44px"
            android:background="@drawable/icon_edit"
            android:padding="20px" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />
</com.hualianzb.sec.views.SwipeListLayout>