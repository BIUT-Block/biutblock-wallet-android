<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600px"
    android:layout_height="260px"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/px20"
        android:text="请输入密码"
        android:textColor="@color/text_black" />

    <EditText
        android:id="@+id/ed_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80px"
        android:layout_marginLeft="@dimen/px40"
        android:layout_marginRight="@dimen/px40"
        android:background="@color/white"
        android:gravity="center"
        android:inputType="textPassword"
        android:maxLength="30" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dimen_40px"
        android:layout_marginRight="@dimen/dimen_40px"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="82px"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/tv__ok"
            android:layout_width="wrap_content"
            android:layout_height="82px"
            android:layout_marginLeft="@dimen/dimen_80px"
            android:layout_marginRight="@dimen/px60"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/text_black"
            android:textSize="24px" />
    </LinearLayout>
</LinearLayout>

