<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ed_mn"
                android:layout_width="654px"
                android:layout_height="320px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_40px"
                android:background="@drawable/bg_gray_radius12"
                android:gravity="start"
                android:hint="助记词，按空格分隔"
                android:padding="@dimen/dimen_24px"
                android:textColor="@color/text_black"
                android:textSize="32px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_24px"
                android:layout_marginTop="@dimen/dimen_24px"
                android:text="密码"
                android:textColor="#FFB0AFAF"
                android:textSize="@dimen/dimen_30px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px20"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_24px"
                android:paddingRight="@dimen/dimen_24px">

                <EditText
                    android:id="@+id/ed_pass"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:hint="@string/pass_hint"
                    android:inputType="textPassword"
                    android:textColorHint="#FFBBBABA"
                    android:textSize="28px" />

                <ImageView
                    android:id="@+id/iv_clear1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_clear"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="4px"
                android:background="@color/line_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_24px"
                android:layout_marginTop="@dimen/dimen_40px"
                android:digits="@string/delete_chinese1"
                android:text="重复密码"
                android:textColor="#FFB0AFAF"
                android:textSize="@dimen/dimen_30px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px20"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_24px"
                android:paddingRight="@dimen/dimen_24px">

                <EditText
                    android:id="@+id/ed_repass"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="请再次确认密码"
                    android:inputType="textPassword"
                    android:textColorHint="#FFBBBABA"
                    android:textSize="28px" />

                <ImageView
                    android:id="@+id/iv_clear2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/icon_clear"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="4px"
                android:background="@color/line_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_24px"
                android:layout_marginTop="@dimen/dimen_40px"
                android:text="密码提示(选填)"
                android:textColor="#FFB0AFAF"
                android:textSize="@dimen/dimen_30px" />

            <EditText
                android:id="@+id/ed_tips"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60px"
                android:layout_marginLeft="@dimen/dimen_24px"
                android:layout_marginRight="@dimen/dimen_24px"
                android:layout_marginTop="@dimen/px20"
                android:background="@color/white"
                android:textColorHint="#FFBBBABA"
                android:textSize="@dimen/dimen_24px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_agree_mn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_30px"
                    android:background="@drawable/cb_agreemnt"
                    android:button="@null"
                    android:checked="false" />

                <TextView
                    style="@style/text_30_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_20px"
                    android:text="我已仔细阅读并同意 "
                    android:textColor="#FFB2B2B2" />

                <TextView
                    android:id="@+id/tv_agreement"
                    style="@style/text_30_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务条款 "
                    android:textColor="@color/text_yellow" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_start_import"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80px"
                android:layout_marginLeft="@dimen/dimen_24px"
                android:layout_marginRight="@dimen/dimen_24px"
                android:layout_marginTop="@dimen/dimen_40px"
                android:background="@color/line_color"
                android:gravity="center"
                android:text="开始导入"
                android:textColor="@color/text_noChose"
                android:textSize="@dimen/dimen_36px" />

            <TextView
                android:id="@+id/tv_mn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen_40px"
                android:layout_marginTop="@dimen/dimen_26px"
                android:gravity="center"
                android:padding="5px"
                android:text="什么是助记词"
                android:textColor="#AF8444"
                android:textSize="28px" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>