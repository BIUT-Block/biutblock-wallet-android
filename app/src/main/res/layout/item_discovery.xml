<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_40px">

        <ImageView
            android:id="@+id/iv_avater"
            android:layout_width="80px"
            android:layout_height="80px"
            android:background="@color/text_green_increase"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_above"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34px"
                android:text="DDEX"
                android:textColor="@color/text_black"
                android:textSize="@dimen/dimen_30px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34px"
                android:layout_marginTop="@dimen/px3"
                android:lineSpacingMultiplier="1.1"
                android:text="tony tony tony tony tony tony tony tony tony tony tony tony tony tony "
                android:textColor="@color/text_gray02"
                android:textSize="@dimen/dimen_26px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>