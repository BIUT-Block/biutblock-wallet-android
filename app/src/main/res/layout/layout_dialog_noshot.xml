<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.9528"
        android:background="@drawable/shadow_to_bothside"
        android:paddingLeft="34pt"
        android:paddingRight="34pt"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="No Screenshot Please!"
            android:textColor="@color/text_blue"
            android:textSize="36pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36pt"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/no_shot_tips"
            android:textColor="@color/text_gray02"
            android:textSize="20pt" />


        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="310pt"
            android:layout_height="86pt"
            android:layout_marginTop="132pt"
            android:background="@drawable/bg_btn"
            android:clickable="false"
            android:gravity="center"
            android:text="Got It"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="22pt" />
    </LinearLayout>
</RelativeLayout>