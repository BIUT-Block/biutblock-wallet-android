<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:background="@color/bg_detail"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_back_top"
            android:layout_width="wrap_content"
            android:layout_height="68px"
            android:layout_marginLeft="@dimen/dimen_50px"
            android:clickable="true"
            android:layout_marginTop="@dimen/dimen_50px"
            android:onClick="back"
            android:paddingRight="@dimen/dimen_50px"
            android:src="@drawable/back_selector" />

        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_back_top"
            android:layout_marginLeft="@dimen/px50"
            android:layout_marginTop="91px"
            android:gravity="left|center_vertical"
            android:text="Transaction Record"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/dimen_55px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_avater"
            android:layout_width="166px"
            android:layout_height="172px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100px"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_60px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:lineSpacingMultiplier="1.5"
                android:textSize="42px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="transfer Pending"
                android:textSize="@dimen/dimen_28px" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_50px"
        android:paddingRight="@dimen/dimen_50px"
        android:paddingBottom="@dimen/dimen_50px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="41px"
            android:layout_marginTop="@dimen/dimen_50px"
            android:text="Sent"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/dimen_34px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_send_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:text="ebosdsdwr02938sfjksfu9khwe23423423"
            android:textColor="#B0B0B0"
            android:textSize="@dimen/dimen_28px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="41px"
            android:layout_marginTop="@dimen/dimen_25px"
            android:text="Receive"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/dimen_34px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_get_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:text="ebosdsdwr02938sfjksfu9khwe23423423"
            android:textColor="#B0B0B0"
            android:textSize="@dimen/dimen_28px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="41px"
            android:layout_marginTop="@dimen/dimen_24px"
            android:text="Miner cost"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/dimen_34px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_gas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:text="0SEC"
            android:textColor="#B0B0B0"
            android:textSize="@dimen/dimen_28px" />

        <LinearLayout
            android:id="@+id/ll_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/dimen_34px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:textColor="#B0B0B0"
                android:textSize="@dimen/dimen_28px" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_50px"
        android:paddingTop="58px"
        android:paddingRight="@dimen/dimen_50px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction number"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/dimen_34px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_trade_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#91A2AA"
                android:textSize="@dimen/dimen_34px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_50px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Block"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/dimen_34px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="333444555"
                android:textColor="#91A2AA"
                android:textSize="@dimen/dimen_34px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_50px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Time"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/dimen_34px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#91A2AA"
                android:textSize="@dimen/dimen_34px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_toWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_60px"
            android:layout_marginBottom="@dimen/dimen_50px"
            android:background="@drawable/bg_normal_gray_white_10"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_20px">

            <ImageView
                android:layout_width="@dimen/dimen_36px"
                android:layout_height="@dimen/dimen_36px"
                android:scaleType="centerInside"
                android:src="@drawable/icon_sec" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_28px"
                android:text="Enter SECBlock for more details"
                android:textColor="#ff388ed8"
                android:textSize="@dimen/dimen_26px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>