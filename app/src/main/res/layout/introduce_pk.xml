<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_head_pic_right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_50px"
        android:paddingRight="@dimen/dimen_50px">

        <TextView
            android:id="@+id/tv_content1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="115px"
            android:textColor="@color/text_gray02"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_content2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="46px"
            android:textColor="@color/text_gray02"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_content3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="46px"
            android:textColor="@color/text_gray02"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_content4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="46px"
            android:textColor="@color/text_gray02"
            android:textSize="32px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_80px"
            android:text="Tips"
            android:textColor="#ffee1c38"
            android:textSize="32px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px"
            android:layout_marginBottom="115px"
            android:lineSpacingMultiplier="1.2"
            android:text="Users can use the clear text private key to import the SEC wallet, use the new password to generate a new Keystore (remember to delete the old Keystore), and use this method to modify the wallet password."
            android:textColor="#ffee1c38"
            android:textSize="@dimen/dimen_28px" />
    </LinearLayout>
</LinearLayout>