<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_50px"
        android:paddingRight="@dimen/dimen_50px">

        <TextView
            android:id="@+id/tv_close"
            style="@style/rightButtonStyle"
            android:layout_height="68px"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dimen_50px"
            android:background="@drawable/bg_btn_importfromcreat"
            android:gravity="center"
            android:text="Close"
            android:textSize="@dimen/dimen_28px"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px160"
            android:text="Export Private Key"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/dimen_48px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px160"
            android:lineSpacingMultiplier="1.2"
            android:paddingTop="@dimen/dimen_40px"
            android:paddingBottom="@dimen/dimen_40px"
            android:text="@string/export_private_key_tips"
            android:textColor="@color/text_error"
            android:textSize="@dimen/dimen_34px" />

        <TextView
            android:id="@+id/tv_private_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_70px"
            android:background="@drawable/bg_gray_radius20"
            android:gravity="center_vertical|left"
            android:lineSpacingMultiplier="1.1"
            android:paddingLeft="44px"
            android:paddingTop="@dimen/dimen_60px"
            android:paddingRight="44px"
            android:paddingBottom="@dimen/dimen_60px"
            android:textColor="@color/text_blue"
            android:textSize="32px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_130px"
            android:layout_marginTop="66px"
            android:background="@drawable/bg_btn"
            android:gravity="center"
            android:text="Copy"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_34px"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>