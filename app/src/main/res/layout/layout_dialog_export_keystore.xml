<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_50px"
            android:paddingRight="@dimen/dimen_50px"
            android:paddingBottom="@dimen/dimen_50px">

            <TextView
                android:id="@+id/tv_close"
                style="@style/rightButtonStyle"
                android:layout_height="68px"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dimen_50px"
                android:background="@drawable/bg_btn_importfromcreat"
                android:gravity="center"
                android:text="Close"
                android:textSize="@dimen/dimen_28px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_70px"
                android:layout_marginTop="170px"
                android:text="Export Keystore"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/dimen_48px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_70px"
                android:layout_marginTop="146px"
                android:text="No taking screenshot"
                android:textColor="@color/text_blue"
                android:textSize="40px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_70px"
                android:layout_marginTop="@dimen/sp16"
                android:text="@string/save_offline"
                android:textColor="@color/text_gray02"
                android:textSize="@dimen/dimen_34px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_70px"
                android:layout_marginTop="@dimen/dimen_90px"
                android:text="No transmitting on net"
                android:textColor="@color/text_blue"
                android:textSize="40px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_70px"
                android:layout_marginTop="@dimen/sp16"
                android:text="@string/no_save_on_net"
                android:textColor="@color/text_gray02"
                android:textSize="@dimen/dimen_34px" />

            <TextView
                android:id="@+id/tv_keystore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_80px"
                android:background="@drawable/bg_gray_radius20"
                android:gravity="center_vertical|left"
                android:lineSpacingMultiplier="1.1"
                android:paddingLeft="@dimen/dimen_70px"
                android:paddingTop="@dimen/dimen_60px"
                android:paddingRight="@dimen/dimen_70px"
                android:paddingBottom="@dimen/dimen_60px"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/dimen_30px" />

            <TextView
                android:id="@+id/tv_copy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_130px"
                android:layout_marginTop="@dimen/dimen_70px"
                android:background="@drawable/bg_btn"
                android:gravity="center"
                android:text="Copy Keynote"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_34px"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>