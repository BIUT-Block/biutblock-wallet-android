<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_head_pic_right" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="32pt"
            android:paddingRight="32pt">

            <TextView
                android:id="@+id/tv_content1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="76pt"
                android:textColor="@color/text_gray02"
                android:textSize="22pt" />

            <TextView
                android:id="@+id/tv_content2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="28pt"
                android:textColor="@color/text_gray02"
                android:textSize="22pt" />

            <TextView
                android:id="@+id/tv_content3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="34pt"
                android:textColor="@color/text_gray02"
                android:textSize="22pt" />

            <TextView
                android:id="@+id/tv_content4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="34pt"
                android:textColor="@color/text_gray02"
                android:textSize="22pt" />


            <TextView
                android:id="@+id/tv_content5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="34pt"
                android:textColor="@color/text_gray02"
                android:textSize="22pt" />


            <TextView
                android:id="@+id/tv_content6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28pt"
                android:background="@color/edit_bg"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="32pt"
                android:paddingTop="18pt"
                android:paddingRight="32pt"
                android:paddingBottom="38pt"
                android:textColor="@color/text_gray02"
                android:textSize="18pt" />


            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="16dp"
                android:layout_height="11dp"
                android:layout_marginTop="54pt"
                android:text="Tips"
                android:textColor="#ffee1c38"
                android:textSize="18pt" />

            <TextView
                android:id="@+id/tv_tip_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6pt"
                android:layout_marginBottom="82pt"
                android:text="Keystore password is unique and unchangeable. If you want to change the wallet password, you need to re-import it with a mnemonic or plaintext private key and encrypt it with a new one to generate a new Keystore."
                android:textColor="#ffee1c38"
                android:textSize="18pt" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>