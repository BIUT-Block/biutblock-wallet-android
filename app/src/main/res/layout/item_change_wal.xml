<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="136px"
        android:layout_marginLeft="34pt"
        android:layout_marginRight="34pt"
        android:background="@drawable/bg_btn_can_green"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="34pt"
        android:paddingRight="40pt">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_wallet_gray" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40pt"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@drawable/textcolor_black_white"
            android:textSize="22pt"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_checked"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:src="@drawable/icon_cb_yes" />
    </LinearLayout>

</LinearLayout>