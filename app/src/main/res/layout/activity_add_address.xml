<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/include_head_pic_right" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34pt"
                android:layout_marginRight="34pt"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30pt"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Name "
                        android:textColor="@color/text_blue"
                        android:textSize="22pt"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_name"
                        android:text="*"
                        android:textColor="@color/text_error"
                        android:textSize="22pt" />

                    <TextView
                        android:id="@+id/tv_name_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/text_error"
                        android:textSize="22pt"
                        android:visibility="gone" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="match_parent"
                    android:layout_height="81pt"
                    android:layout_marginTop="20pt"
                    android:background="@drawable/bg_edit_gray"
                    android:maxLength="12"
                    android:paddingLeft="20pt"
                    android:textSize="20pt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20pt"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wallet Address "
                        android:textColor="@color/text_blue"
                        android:textSize="22pt"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_address"
                        android:text="*"
                        android:textColor="@color/text_error"
                        android:textSize="22pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_address_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="dupicate wallet name"
                        android:textColor="@color/text_error"
                        android:textSize="18pt"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="81pt"
                    android:layout_marginTop="20pt"
                    android:background="@drawable/bg_edit_gray"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/ed_address"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/edit_bg"
                        android:maxLength="42"
                        android:paddingLeft="20pt"
                        android:scrollbars="none"
                        android:singleLine="true"
                        android:textSize="20pt" />

                    <RelativeLayout
                        android:id="@+id/rl_scan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/dimen_36px"
                            android:layout_height="@dimen/dimen_36px"
                            android:layout_marginRight="40pt"
                            android:background="@drawable/icon_scan" />
                    </RelativeLayout>
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24pt"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:text="Phone Number"
                        android:textColor="@color/text_blue"
                        android:textSize="22pt"
                        android:textStyle="bold" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="81pt"
                    android:layout_marginTop="20pt"
                    android:background="@drawable/bg_edit_gray"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:paddingLeft="20pt"
                    android:scrollbars="none"
                    android:singleLine="true"
                    android:textSize="20pt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24pt"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email "
                        android:textColor="@color/text_blue"
                        android:textSize="22pt"
                        android:textStyle="bold" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/ed_email"
                    android:layout_width="match_parent"
                    android:layout_height="81pt"
                    android:layout_marginTop="20pt"
                    android:background="@drawable/bg_edit_gray"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20pt"
                    android:scrollbars="none"
                    android:singleLine="true"
                    android:textSize="20pt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24pt"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remark "
                        android:textColor="@color/text_blue"
                        android:textSize="22pt"
                        android:textStyle="bold" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/ed_remark"
                    android:layout_width="match_parent"
                    android:layout_height="81pt"
                    android:layout_marginTop="20pt"
                    android:background="@drawable/bg_edit_gray"
                    android:maxLength="30"
                    android:paddingLeft="20pt"
                    android:scrollbars="none"
                    android:singleLine="true"
                    android:textSize="20pt" />

                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="match_parent"
                    android:layout_height="86pt"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="104pt"
                    android:layout_marginBottom="88pt"
                    android:background="@drawable/bg_btn_cannot"
                    android:enabled="false"
                    android:gravity="center"
                    android:maxLength="30"
                    android:text="Confirm Add"
                    android:textColor="@color/white"
                    android:textSize="22pt"
                    android:textStyle="bold"></TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>