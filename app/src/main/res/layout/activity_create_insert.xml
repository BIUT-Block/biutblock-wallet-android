<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_create"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="67px"
            android:gravity="center"
            android:text="SEC Light Wallet"
            android:textColor="@color/text_color"
            android:textSize="@dimen/dimen_55px"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180px"
            android:background="@drawable/bg_normal_gray_white_20"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_40px">

            <ImageView
                android:layout_width="144px"
                android:layout_height="134px"
                android:src="@drawable/icon_create_wallet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_40px"
                android:text="Create Wallet"
                android:textColor="@color/text_selected_green"
                android:textSize="38px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20px"
                android:gravity="center"
                android:text="Create a new SEC wallet"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp26" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_import"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_normal_white_gray_20"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_40px">

            <ImageView
                android:layout_width="136px"
                android:layout_height="136px"
                android:src="@drawable/icon_import_wallet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_40px"
                android:text="Import Wallet"
                android:textColor="#43535B"
                android:textSize="38px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20px"
                android:gravity="center"
                android:text="Import an existing SEC wallet"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp26" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>