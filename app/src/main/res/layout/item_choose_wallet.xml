<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_48px"
        android:paddingRight="@dimen/dimen_48px">

        <ImageView
            android:id="@+id/iv_avater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34px"
            android:text="ETH"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dimen_36px" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_black"
                android:textSize="@dimen/dimen_36px" />

            <TextView
                android:id="@+id/tv_cn_property"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="≈￥0"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dimen_24px"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="@dimen/dimen_48px"
        android:layout_marginRight="@dimen/dimen_48px"
        android:background="@color/line_color" />
</LinearLayout>