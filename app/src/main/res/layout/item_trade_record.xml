<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_24px"
        android:paddingRight="@dimen/dimen_24px">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_transfer_int" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="240px"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="55555555555555555"
                    android:textColor="#FF575757"
                    android:textSize="28px"
                    tools:ignore="EllipsizeMaxLines" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10px"
                        android:text="+111.000"
                        android:textColor="#FF21A348"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/tv_kind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ether"
                        android:textColor="#FF272727"
                        android:textSize="28px" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10px"
                android:layout_marginTop="8px"
                android:text="11:09"
                android:textColor="#FF575757"
                android:textSize="28px" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>