<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_50px"
        android:paddingRight="@dimen/dimen_50px">

        <TextView
            android:id="@+id/tv_close"
            style="@style/rightButtonStyle"
            android:layout_height="68px"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dimen_50px"
            android:background="@drawable/bg_btn_importfromcreat"
            android:gravity="center"
            android:text="Close"
            android:textSize="@dimen/dimen_28px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170px"
            android:text="Export Keystore"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/dimen_48px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="290px"
            android:text="No taking screenshot"
            android:textColor="@color/text_error"
            android:textSize="@dimen/dimen_40px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px10"
            android:lineSpacingMultiplier="1.1"
            android:text="@string/no_shot_attention"
            android:textColor="@color/bg_red"
            android:textSize="@dimen/dimen_40px" />

        <TextView
            android:id="@+id/tv_go_it"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_130px"
            android:layout_marginTop="200px"
            android:background="@drawable/bg_btn_pink"
            android:gravity="center"
            android:text="Got It"
            android:textColor="@color/bg_red"
            android:textSize="@dimen/dimen_34px"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>