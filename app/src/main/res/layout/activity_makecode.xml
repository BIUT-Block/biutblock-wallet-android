<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_50px"
        android:layout_marginTop="@dimen/dimen_30px"
        android:background="@drawable/icon_close_black"
        android:clickable="true"
        android:onClick="back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_150px"
        android:layout_marginTop="110px"
        android:layout_marginRight="@dimen/dimen_150px"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px50"
            android:text="SEC Receipt"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/dimen_55px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="225px"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/text_gray02"
            android:textSize="@dimen/dimen_34px" />

        <RelativeLayout
            android:layout_width="524px"
            android:layout_height="524px"
            android:layout_marginTop="@dimen/dimen_40px"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_code_pic"
                android:layout_width="460px"
                android:layout_height="460px"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="590px"
            android:layout_height="@dimen/dimen_130px"
            android:layout_gravity="center"
            android:layout_marginTop="152px"
            android:background="@drawable/bg_btn"
            android:gravity="center"
            android:text="Copy Payment Address"
            android:textColor="@color/white"
            android:textSize="34px" />
    </LinearLayout>
</LinearLayout>
